# OpenTTS Server Configuration
# Base URL for OpenTTS HTTP API server
# Default: http://localhost:5500
VITE_OPEN_TTS_BASE_URL=http://localhost:5500

# Feature Flags
# Enable/disable specific TTS engines
VITE_ENABLE_WEB_SPEECH=true
VITE_ENABLE_ESPEAK_WASM=true
VITE_ENABLE_OPEN_TTS=false

# Preferred TTS Engine
# Options: web-speech, espeak-wasm, open-tts
# Default: web-speech (will fallback automatically if not available)
VITE_PREFERRED_TTS_ENGINE=web-speech
